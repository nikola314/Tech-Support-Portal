@model TechSupportPortal.Models.Response

@{
    ViewBag.Title = "Edit Response";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Response</h2>
@using (Html.BeginForm("EditResponse", "Home"))
{
    @Html.AntiForgeryToken()
    
